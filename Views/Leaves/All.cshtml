@model IEnumerable<EmployeeLeavePortal.Models.LeaveRequest>
@{
    ViewData["Title"] = "All Leave Requests";
}
<h1 class="mt-3">All Leave Requests</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Employee</th>
            <th>Type</th>
            <th>Start</th>
            <th>End</th>
            <th>Status</th>
            <th>Manager Comments</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Employee?.FullName (@item.Employee?.Email)</td>
            <td>@item.Type</td>
            <td>@item.StartDate.ToString("dd MMM yyyy")</td>
            <td>@item.EndDate.ToString("dd MMM yyyy")</td>
            <td>
                @switch (item.Status)
                {
                    case EmployeeLeavePortal.Models.LeaveStatus.Pending:
                        <span class="badge badge-status badge-pending">Pending</span>
                        break;
                    case EmployeeLeavePortal.Models.LeaveStatus.Approved:
                        <span class="badge badge-status badge-approved">Approved</span>
                        break;
                    case EmployeeLeavePortal.Models.LeaveStatus.Rejected:
                        <span class="badge badge-status badge-rejected">Rejected</span>
                        break;
                }
            </td>
            <td>@item.ManagerComments</td>
        </tr>
    }
    </tbody>
</table>
