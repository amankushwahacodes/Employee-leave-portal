@model IEnumerable<EmployeeLeavePortal.Models.LeaveRequest>
@{
    ViewData["Title"] = "Pending Leave Approvals";
}
<h1 class="mt-3">Pending Leave Approvals</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Employee</th>
            <th>Type</th>
            <th>Start</th>
            <th>End</th>
            <th>Reason</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Employee?.FullName (@item.Employee?.Email)</td>
            <td>@item.Type</td>
            <td>@item.StartDate.ToString("dd MMM yyyy")</td>
            <td>@item.EndDate.ToString("dd MMM yyyy")</td>
            <td>@item.Reason</td>
            <td class="text-end">
                <form asp-action="Approve" method="post" class="d-inline">
                    <input type="hidden" name="id" value="@item.Id" />
                    <input type="text" name="comments" class="form-control form-control-sm d-inline w-auto" placeholder="Comments" />
                    <button type="submit" class="btn btn-sm btn-success">Approve</button>
                </form>
                <form asp-action="Reject" method="post" class="d-inline ms-1">
                    <input type="hidden" name="id" value="@item.Id" />
                    <input type="text" name="comments" class="form-control form-control-sm d-inline w-auto" placeholder="Comments" />
                    <button type="submit" class="btn btn-sm btn-danger">Reject</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
