@model IEnumerable<EmployeeLeavePortal.Models.LeaveRequest>
@using EmployeeLeavePortal.Models
@{
    ViewData["Title"] = "My Leave Requests";
}
<h1 class="mt-3">My Leave Requests</h1>
<p>
    <a class="btn btn-primary" asp-action="Create">Apply for Leave</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Type</th>
            <th>Start</th>
            <th>End</th>
            <th>Status</th>
            <th>Manager Comments</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Type</td>
            <td>@item.StartDate.ToString("dd MMM yyyy")</td>
            <td>@item.EndDate.ToString("dd MMM yyyy")</td>
            <td>
                @switch (item.Status)
                {
                    case LeaveStatus.Pending:
                        <span class="badge badge-status badge-pending">Pending</span>
                        break;
                    case LeaveStatus.Approved:
                        <span class="badge badge-status badge-approved">Approved</span>
                        break;
                    case LeaveStatus.Rejected:
                        <span class="badge badge-status badge-rejected">Rejected</span>
                        break;
                }
            </td>
            <td>@item.ManagerComments</td>
        </tr>
    }
    </tbody>
</table>
