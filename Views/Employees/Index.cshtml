@model List<(EmployeeLeavePortal.Models.ApplicationUser User, string Role)>
@{
    ViewData["Title"] = "Employees";
}
<h1 class="mt-3">Employees</h1>
<p>
    <a class="btn btn-primary" asp-action="Create">Create New Employee</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Department</th>
            <th>Role</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.User.FullName</td>
                <td>@item.User.Email</td>
                <td>@item.User.Department?.Name</td>
                <td>@item.Role</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-secondary" asp-action="Edit" asp-route-id="@item.User.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.User.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
