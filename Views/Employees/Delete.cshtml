@model EmployeeLeavePortal.Models.ApplicationUser
@{
    ViewData["Title"] = "Delete Employee";
}
<h1 class="mt-3">Delete Employee</h1>
<hr />
<h5>Are you sure you want to delete this employee?</h5>
<dl class="row mt-3">
    <dt class="col-sm-2">Full Name</dt>
    <dd class="col-sm-10">@Model.FullName</dd>
    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>
    <dt class="col-sm-2">Department</dt>
    <dd class="col-sm-10">@Model.Department?.Name</dd>
</dl>
<form asp-action="Delete" onsubmit="return confirm('Are you sure you want to delete this employee?');">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
