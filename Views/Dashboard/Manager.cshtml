@{
    ViewData["Title"] = "Manager Dashboard";
}
<h1 class="mt-3">Manager Dashboard</h1>
<hr />
<div class="row g-3">
    <div class="col-md-4">
        <div class="card text-bg-light"><div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="h6">Team Size</div>
                    <div class="display-6">@ViewBag.TeamSize</div>
                </div>
                <i class="bi bi-people-fill fs-1 text-primary"></i>
            </div>
        </div></div>
    </div>
    <div class="col-md-4">
        <div class="card text-bg-light"><div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="h6">Team Pending Leaves</div>
                    <div class="display-6">@ViewBag.TeamPending</div>
                </div>
                <i class="bi bi-hourglass-split fs-1 text-warning"></i>
            </div>
        </div></div>
    </div>
    <div class="col-md-4">
        <div class="card text-bg-light"><div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="h6">Team Attendance Today</div>
                    <div class="display-6">@ViewBag.TeamAttendanceToday</div>
                </div>
                <i class="bi bi-clipboard-check fs-1 text-success"></i>
            </div>
        </div></div>
    </div>
</div>
<div class="mt-3">
    <a class="btn btn-outline-primary" asp-controller="Leaves" asp-action="Pending">Review Pending Leaves</a>
</div>
