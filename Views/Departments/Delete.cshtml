@model EmployeeLeavePortal.Models.Department
@{
    ViewData["Title"] = "Delete Department";
}
<h1 class="mt-3">Delete Department</h1>
<hr />
<h5>Are you sure you want to delete this department?</h5>
<dl class="row mt-3">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>
</dl>
<form asp-action="Delete" onsubmit="return confirm('Are you sure you want to delete this department?');">
    <input type="hidden" asp-for="DepartmentId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
